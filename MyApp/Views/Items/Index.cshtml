@model List<MyApp.Models.Item>
@{
    ViewData["Title"] = "Index";
}

<div class="px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center">
        <div class="sm:flex-auto">
            <h3 class="text-xl font-semibold text-gray-900">Items</h3>
            <p class="mt-2 text-sm text-gray-700">A list of all the items in your application.</p>
        </div>
        <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
            <a asp-action="Create" class="inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:w-auto">
                Add new item
            </a>
        </div>
    </div>

    <div class="mt-8 flow-root">
        <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
                    <table class="min-w-full divide-y divide-gray-300">
                        <thead class="bg-gray-50">
                            <tr>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Serial No.</th>
                                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Name</th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Type</th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Category</th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Price</th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Client</th>
                                <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                                    <span class="sr-only">Actions</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200 bg-white">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">@item.SerialNumber?.Name</td>
                                    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">@item.Name</td>
                                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">@item.Type</td>
                                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">@item.Category?.Name</td>
                                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">@item.Price.ToString("N2")</td>
                                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                                        

                                        <ul>
                                            @foreach (var client in item.ItemClients)
                                            {
                                                <li>
                                                    @client.Client.Name
                                                </li>
                                            }
                                        </ul>
                                    </td>
                                    <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                                        <div class="flex space-x-3">
                                            <a asp-action="Edit" asp-route-itemid="@item.Id" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                                            <a asp-action="Delete" asp-route-itemid="@item.Id" class="text-red-600 hover:text-red-900">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>